<title>
	{% block title %}Circet-Accueil
	{% endblock %}
</title>
{% block stylesheets %}
	<link rel="stylesheet" href="{{asset('css/Restitution.css')}}">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
{% endblock %}
{{ include('Pages/sidebar.html.twig') }}
{% block body %}
	<div class="home_content">
	{% for flash_message in app.session.flashbag.get('success') %}
			<div class="alert  alert-success fade show" role="alert">
				<strong>Succ√®s!</strong>
				{{flash_message}}
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
		{% endfor %}
		<div class="text">Restitution</div>
		{% if UserMachine %}
		<div class="Main">
		{% for item in UserMachine %}
			<div class="Item">
				<div class="Left">
					<img  src="/CIRCET-STOCK/public/{{item.getMachineAffectation().getImgSrc()}}" alt="no img"/>
				</div>
				<div class="Right">
						<h6>{{item.getMachineAffectation().getModel().getMarque().getMarqueName()}} </h6>
						<h6>{{item.getMachineAffectation().getModel().getModelName()}}</h6>
						<p class="mb-1" style="font-size: .77rem; ">{{item.getMachineAffectation().getDescription()}}</p>
						<a href="/DemandeRestitution/{{item.id}}">
						<button>Demande de restitution</button>
						</a>
				</div>
			</div>
			{% endfor %}
		</div>
		{% else %} 
				<div class="exeption">
					<div>
						<img src="{{asset('images/box.png')}}" />
						<p>Votre invantaire est vide </p>
					</div>
				</div>
		{% endif %}
	</div>
{% endblock %}
{% block javascripts %}
	<script src="{{asset('JS/sidebar.js')}}"></script>
	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
{% endblock %}
